root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

[*.{c,h}]
max_line_length = 80

[{fdspy,*.sh}]
max_line_length = 80

# shfmt options
shell_variant = posix
binary_next_line = true
switch_case_indent = true
space_redirects = true

[*_spec.sh]
ignore = true

[*.md]
trim_trailing_whitespace = false
